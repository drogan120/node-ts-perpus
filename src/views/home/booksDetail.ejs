<%- include ('../templates/header') %> <%- include ('../templates/navbar') %>
<div class="container mx-auto mt-5 ">
  <div class="shadow-lg p-5 rounded bg-gray-300">
    <div class="w-full mt-2 mb-2">
      <div class="mt-3">
        <label for="tittle" class="block text-xs mb-2 text-gray-600">Tittle</label>
        <input type="text" name="tittle" value="<%- book.tittle %>"
          class="w-full rounded text-gray-600 px-3 h-8 focus:outline-none">
      </div>
      <div class="mt-3">
        <label for="isbn" class="block text-xs mb-2 text-gray-600">ISBN</label>
        <input type="text" name="isbn" value="<%- book.isbn %>"
          class="w-full rounded text-gray-600 px-3 h-8 focus:outline-none">
      </div>
      <div class="mt-3">
        <label for="author" class="block text-xs mb-2 text-gray-600">Author</label>
        <input type="text" name="author" value="<%- book.author %>"
          class="w-full rounded text-gray-600 px-3 h-8 focus:outline-none">
      </div>
      <div class="mt-3">
        <label for="publisher" class="block text-xs mb-2 text-gray-600">Publisher</label>
        <input type="text" name="publisher" value="<%- book.publisher %>"
          class="w-full rounded text-gray-600 px-3 h-8 focus:outline-none">
      </div>
      <div class="mt-3">
        <label for="released" class="block text-xs mb-2 text-gray-600">Released</label>
        <input type="text" name="released" value="<%- book.released %>"
          class="w-full rounded text-gray-600 px-3 h-8 focus:outline-none">
      </div>
      <div class="mt-3">
        <label for="stock" class="block text-xs mb-2 text-gray-600">Stock</label>
        <input type="text" name="stock" value="<%- book.stock %>"
          class="w-full rounded text-gray-600 px-3 h-8 focus:outline-none">
      </div>
    </div>
    <div>
    </div>
  </div>
</div>
<%- include ('../templates/footer') %>