<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=x, initial-scale=1.0" />
    <title>Node Perpus - Drogan120</title>
    <link rel="stylesheet" href="/assets/css/tailwind.css" />
  </head>
  <body>
    <!-- Navbar -->
    <%- include ('../templates/navbar') %>

    <!-- Header -->
    <div class="header">
      <h1
        class="text-center mx-auto text-xl font-medium text-gray-600 mt-3 mb-3 uppercase"
      >
        Welcome to Perpus Management System
      </h1>
    </div>

    <!-- Search Form -->
    <div class="container mx-auto mt-5">
      <div class="flex">
        <div class="w-full">
          <div class="mx-auto p-8">
            <div class="text-xl font-semibold mb-3 text-gray-600">Search</div>
            <form
              action="<%= baseUrl %>"
              method="post"
              enctype="application/x-www-form-urlencoded"
            >
              <div class="">
                <label for="keyword" class="text-gray-600 block text-xs mb-2"
                  >Book Name</label
                >
                <input
                  type="text"
                  name="keyword"
                  class="rounded border-none bg-gray-200 px-3 h-10 w-full focus:outline-none"
                />
                <button
                  type="submit"
                  class="rounded mt-2 text-white p-2 bg-blue-400 hover:bg-blue-700 focus:outline-none"
                >
                  Search
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Search Result -->
    <% if (typeof data !== 'undefined') { %>
    <div class="container mx-auto">
      <% data.forEach(function (book) { %>
      <div class="flex">
        <div class="p-8">
          <h2 class="text-gray-500 text-lg mt-3 mb-3">Result</h2>
          <div class="w-1/2">
            <div
              class="rounded shadow-lg p-4 ml-2 mr-2 mt-2 text-white mx-auto mb-2"
            >
              <img
                class="rounded-t-md"
                src="/assets/images/ali.jpg"
                alt=""
                srcset=""
              />
              <div class="p-3 border-b-3 mt-2 mb-2">
                <h4 class="text-gray-500"><%= book.title %></h4>
                <P class="text-gray-500"><%= book.author %> </P>
              </div>
              <div class="button mt-2 mb-2">
                <a
                  href="#"
                  class="bg-blue-400 p-2 mx-auto rounded hover:bg-blue-700"
                  >Detail</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>
  </body>
</html>
