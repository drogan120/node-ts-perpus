<%- include('../templates/header.ejs') %> <%- include ('../templates/navbar') %>
<div class="container mx-auto mt-5">
  <div class="shadow-lg p-5">
    <div class="flex">
      <div class="flex-col w- 8/12 w-full">
        <div class="mb-3">
          <label for="uid" class="block text-xs mb-2 text-gray-600">UID </label>
          <input
            type="text"
            name="uid"
            class="rounded bg-gray-100 text-gray-700 h-10 p-2 w-full focus:outline-none"
            readonly
            value="<%= user.uid %> "
          />
        </div>
        <div class="mb-3">
          <label for="fullname" class="block text-xs mb-2 text-gray-600"
            >Name</label
          >
          <input
            type="text"
            name="fullname"
            class="rounded bg-gray-100 text-gray-700 h-10 p-2 w-full focus:outline-none"
            readonly
            value="<%= user.fullname %> "
          />
        </div>
        <div class="mb-3">
          <label for="email" class="block text-xs text-gray-600 mb-2"
            >Email</label
          >
          <input
            type="text"
            name="email"
            class="rounded bg-gray-100 text-gray-700 h-10 p-2 w-full focus:outline-none"
            readonly
            value="<%= user.email %> "
          />
        </div>
        <div class="mb-3">
          <label for="phone" class="block text-xs text-gray-600">Phone</label>
          <input
            type="tel"
            name="phone"
            class="rounded bg-gray-100 text-gray-700 h-1- p-2 w-full focus:outline-none"
            readonly
            value="<%= user.phone %> "
          />
        </div>
        <div class="mb-3">
          <label for="addres" class="block text-gray-600 text-xs"
            >Address</label
          >
          <textarea
            name="address"
            class="rounded bg-gray-100 text-gray-700 focus:outline-none w-full p-2"
          >
<%= user.address %> </textarea
          >
        </div>
      </div>
      <div class="flex-col w-4/12">
        <div class="rounded p-5">
          <img src="/assets/images/ali.jpg" alt="" srcset="" />
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../templates/footer.ejs') %>
