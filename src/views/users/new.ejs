<%- include('../templates/header') %>
<div class="container mx-auto mt-5">
  <div class="shadow-lg">
    <div class="flex">
      <div class="shadow-lg rounded p-5 bg-gray-400 w-full">
        <form action="<%= baseUrl %>/users/create " method="POST">
          <div class="mb-3">
            <label for="fullname" class="block text-xs mb-2 text-gray-600">
              Username
            </label>
            <input
              type="text"
              name="fullname"
              class="bg-gray-100 text-gray-700 rounded px-3 h-10 w-full focus:outline-none"
            />
          </div>
          <div class="mb-3">
            <label for="email" class="block text-xs mb-2 text-gray-600"
              >Email</label
            >
            <input
              type="email"
              name="email"
              class="bg-gray-100 text-gray-700 rounded px-3 h-10 w-full focus:outline-none"
            />
          </div>
          <div class="mb-3">
            <label for="password" class="block text-xs mb-2 text-gray-600"
              >Password</label
            >
            <input
              type="password"
              name="password"
              class="bg-gray-100 text-gray-700 rounded px-3 h-10 w-full focus:outline-none"
            />
          </div>
          <div class="mb-3">
            <label for="vpassword" class="block text-xs mb-2 text-gray-600"
              >Confirm password</label
            >
            <input
              type="password"
              name="vpassword"
              class="bg-gray-100 text-gray-700 rounded px-3 h-10 w-full focus:outline-none"
            />
          </div>
          <div class="mb-3">
            <button
              type="submit"
              class="rounded bg-blue-400 p-2 mx-auto text-white hover:bg-blue-700"
            >
              Register
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('../templates/footer') %>
